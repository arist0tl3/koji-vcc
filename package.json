{
  "name": "koji-tools",
  "version": "0.5.45",
  "description": "A library that simplifies adding koji-specific features to any javascript project",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --presets @babel/preset-env --out-dir dist",
    "install": "npm run build",
    "postinstall": "node ./dist/cmd.js postinstall",
    "start-dev": "babel src --watch --out-dir dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madewithkoji/koji-tools.git"
  },
  "keywords": [
    "koji",
    "devtool"
  ],
  "author": "jonesnxt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/madewithkoji/koji-tools/issues"
  },
  "homepage": "https://withkoji.com",
  "dependencies": {
    "ansi-colors-and-styles": "^1.0.3"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false,
    "child_process": false
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2"
  }
}
